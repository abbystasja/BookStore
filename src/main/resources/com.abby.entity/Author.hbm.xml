<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.abby.entity.Author" table="Author">
        <id name="id" type="int">
            <column name="id"/>
            <generator class="assigned" />
        </id>
        <property name="name" type="string">
            <column name="name" length="255" not-null="true" />
        </property>
        <property name="yearBorn" type="int">
            <column name="year_born" length="255" not-null="true" />
        </property>
        <property name="shorBiography" type="string">
            <column name="short_biography" length="255" not-null="true" />
        </property>
        <property name="country" type="string">
            <column name="country" length="255" not-null="true" />
        </property>
    </class>
</hibernate-mapping>